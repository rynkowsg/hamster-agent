<?xml version="1.0" encoding="UTF-8" ?>
<node name="/org/gnome/Hamster">
	<interface name="org.gnome.Hamster">
		<!-- categories -->
		<method name="AddCategory">
			<arg type="s" name="name" direction="in"/>
			<arg type="i" direction="out"/>
		</method>
		<method name="GetCategoryId">
			<arg type="s" name="category" direction="in"/>
			<arg type="i" direction="out"/>
		</method>
		<method name="GetCategories">
			<arg type="a(is)" direction="out"/>
		</method>
		<method name="RemoveCategory">
			<arg type="i" name="id" direction="in"/>
		</method>
		<method name="UpdateCategory">
			<arg type="i" name="id" direction="in"/>
			<arg type="s" name="name" direction="in"/>
		</method>

		<!-- activities -->
		<method name="AddActivity">
			<arg type="s" name="name" direction="in"/>
			<arg type="i" name="category_id" direction="in"/>
			<arg type="i" direction="out"/>
		</method>
		<method name="ChangeCategory">
			<arg type="i" name="id" direction="in"/>
			<arg type="i" name="category_id" direction="in"/>
			<arg type="b" direction="out"/>
		</method>
		<method name="GetActivities">
			<arg type="s" name="search" direction="in"/>
			<arg type="a(ss)" direction="out"/>
		</method>
		<method name="GetActivityByName">
			<arg type="s" name="activity" direction="in"/>
			<arg type="i" name="category_id" direction="in"/>
			<arg type="b" name="resurrect" direction="in"/>
			<arg type="a{sv}" direction="out"/>
		</method>
		<method name="GetCategoryActivities">
			<arg type="i" name="category_id" direction="in"/>
			<arg type="a(isis)" direction="out"/>
		</method>
		<method name="RemoveActivity">
			<arg type="i" name="id" direction="in"/>
		</method>
		<method name="UpdateActivity">
			<arg type="i" name="id" direction="in"/>
			<arg type="s" name="name" direction="in"/>
			<arg type="i" name="category_id" direction="in"/>
		</method>

		<!-- facts -->
		<method name="AddFact">
			<arg type="s" name="fact" direction="in"/>
			<arg type="i" name="start_time" direction="in"/>
			<arg type="i" name="end_time" direction="in"/>
			<arg type="b" name="temporary" direction="in"/>
			<arg type="i" direction="out"/>
		</method>
		<method name="GetFact">
			<arg type="i" name="fact_id" direction="in"/>
			<arg type="(iiissisasiib)" direction="out"/>
		</method>
		<method name="GetFacts">
			<arg type="u" name="start_date" direction="in"/>
			<arg type="u" name="end_date" direction="in"/>
			<arg type="s" name="search_terms" direction="in"/>
			<arg type="u" name="limit" direction="in"/>
			<arg type="b" name="asc_by_date" direction="in"/>
			<arg type="(iiissisasiib)" direction="out"/>
		</method>
		<method name="GetTodaysFacts">
			<arg type="a(iiissisasiib)" direction="out"/>
		</method>
		<method name="RemoveFact">
			<arg type="i" name="fact_id" direction="in"/>
		</method>
		<method name="UpdateFact">
			<arg type="i" name="fact_id" direction="in"/>
			<arg type="s" name="fact" direction="in"/>
			<arg type="i" name="start_time" direction="in"/>
			<arg type="i" name="end_time" direction="in"/>
			<arg type="b" name="temporary" direction="in"/>
			<arg type="b" name="exported" direction="in"/>
			<arg type="i" name="new_id" direction="out"/>
		</method>

		<!-- tags -->
		<method name="GetTagIds">
			<arg type="as" name="tags" direction="in"/>
			<arg type="a(isb)" direction="out"/>
		</method>
		<method name="GetTags">
			<arg type="b" name="only_autocomplete" direction="in"/>
			<arg type="a(isb)" direction="out"/>
		</method>
		<method name="SetTagsAutocomplete">
			<arg type="s" name="tags" direction="in"/>
		</method>

		<!-- signals -->
		<signal name="ActivitiesChanged"/>
		<signal name="FactsChanged"/>
		<signal name="TagsChanged"/>
		<signal name="ToggleCalled"/>

		<!-- others -->
		<method name="StopTracking">
			<arg type="i" name="end_time" direction="in"/>
		</method>
		<method name="Toggle"/>
		<method name="Quit"/>
	</interface>
</node>